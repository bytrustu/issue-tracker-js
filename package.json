{
  "name": "issue-tracker-js",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "repository": "https://github.com/f-lab-edu/issue-tracker-js",
  "author": "bytrustu <bytrustu@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@3.5.0",
  "scripts": {
    "start": "vite serve ./src --port 8080",
    "build": "vite build ./src",
    "lint": "yarn dlx eslint --fix ./src --config .eslintrc.json",
    "prettier:write": "prettier --write ./src",
    "prettier:check": "prettier --check ./src",
    "test": "jest"
  },
  "devDependencies": {
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "lit": "^2.7.0",
    "msw": "1.1.0",
    "vite": "^4.2.1"
  },
  "lint-staged": {
    "src/**/*.{js,html,css,json}": "yarn prettier:check",
    "src/**/*.{js}": "yarn lint"
  },
  "msw": {
    "workerDirectory": "src"
  }
}
